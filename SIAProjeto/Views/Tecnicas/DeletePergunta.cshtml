@model SIAProjeto.Models.Pergunta

@{
    ViewBag.Title = "Eliminar Pergunta";
}

<div class="row bg-title">
    <div class="col-lg-6 col-md-4 col-sm-4 col-xs-12">
        <h4 class="page-title">Eliminar Pergunta</h4>
    </div>
</div>

<div class="row">
    <div class="col-md-12 col-xs-12">
        <div class="white-box">
            <h3 class="box-title">Tem a certeza que deseja eliminar esta pergunta?</h3>

            <div>
                <h4>ATENÇÃO: Esta pergunta vai ser eliminada permanentemente. Deseja continuar?</h4>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayName("Texto")
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.texto)
                    </dd>

                    <dt>
                        @Html.DisplayName("Importância")
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.importancia)
                    </dd>

                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Eliminar" class="btn btn-success" />
                    </div>
                }
            </div>
        </div>
    </div>
</div>