<!DOCTYPE html>
<html lang="pt-pt">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewBag.Title - Análise Empresarial UTAD</title>

    <!-- Bootstrap Core CSS -->
    <link href="~/Content/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Menu CSS -->
    <link href="~/Content/plugins/bower_components/sidebar-nav/dist/sidebar-nav.min.css" rel="stylesheet">
    <!-- toast CSS -->
    <link href="~/Content/plugins/bower_components/toast-master/css/jquery.toast.css" rel="stylesheet">
    <!-- morris CSS -->
    <link href="~/Content/plugins/bower_components/morrisjs/morris.css" rel="stylesheet">
    <!-- chartist CSS -->
    <link href="~/Content/plugins/bower_components/chartist-js/dist/chartist.min.css" rel="stylesheet">
    <link href="~/Content/plugins/bower_components/chartist-plugin-tooltip-master/dist/chartist-plugin-tooltip.css" rel="stylesheet">
    <!-- animation CSS -->
    <link href="~/Content/css/animate.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="~/Content/css/style.css" rel="stylesheet">
    <!-- color CSS -->
    <link href="~/Content/css/colors/default.css" id="theme" rel="stylesheet">
</head>
<body class="fix-header">
    <div id="wrapper">
        <!-- ============================================================== -->
        <!-- Topbar header - style you can find in pages.scss -->
        <!-- ============================================================== -->
        <nav class="navbar navbar-default navbar-static-top m-b-0">
            <div class="navbar-header">
                <div class="top-left-part" align="center">
                    <img src="~/Content/31956095_1808016972622306_2941013881394298880_n.png" alt="home" />
                </div>
            </div>
            <!-- /.navbar-header -->
            <!-- /.navbar-top-links -->
            <!-- /.navbar-static-side -->
        </nav>
        <!-- End Top Navigation -->

        <!-- ============================================================== -->
        <!-- Left Sidebar - style you can find in sidebar.scss  -->
        <!-- ============================================================== -->
        <div class="navbar-default sidebar" role="navigation">
            <div class="sidebar-nav slimscrollsidebar">
                <div class="sidebar-head">
                    <h3><span class="fa-fw open-close"><i class="ti-close ti-menu"></i></span> <span class="hide-menu">Navigation</span></h3>
                </div>
                <ul class="nav" id="side-menu">
                    @if (HttpContext.Current.Session["idUtilizadorAutenticado"] == null)
                    {
                        <li style="padding: 70px 0 0;">
                            <a href="/Home/Index" class="waves-effect"><i class="fa fa-clock-o fa-fw" aria-hidden="true"></i>Entrar com conta já existente</a>
                        </li>
                        <li>
                            <a href="/Home/Registo" class="waves-effect"><i class="fa fa-user fa-fw" aria-hidden="true"></i>Registar nova conta</a>
                        </li>
                        @*<li>
                            <a href="/Home/RecuperarPassword" class="waves-effect"><i class="fa fa-user fa-fw" aria-hidden="true"></i>Recuperar Palavra-Passe</a>
                        </li>*@
                    }
                    else
                    {
                        <li style="padding: 70px 0 0;">
                            <a href="/User/Index" class="waves-effect"><i class="fa fa-clock-o fa-fw" aria-hidden="true"></i>Página Principal</a>
                        </li>
                        <li>
                            <a href="/Testes/Index" class="waves-effect"><i class="fa fa-table fa-fw" aria-hidden="true"></i>Gerir Testes</a>
                        </li>
                        <li>
                            <a href="/Tecnicas/Index" class="waves-effect"><i class="fa fa-font fa-fw" aria-hidden="true"></i>Gerir Técnicas</a>
                        </li>
                        <li>
                            <a href="/TiposUtilizador/Index" class="waves-effect"><i class="fa fa-globe fa-fw" aria-hidden="true"></i>Gerir Tipos de Utilizadores</a>
                        </li>
                        <li>
                            <a href="/User/Logout" class="waves-effect"><i class="fa fa-columns fa-fw" aria-hidden="true"></i>Terminar Sessão</a>
                        </li>
                    }
                </ul>
            </div>

        </div>
        <!-- ============================================================== -->
        <!-- End Left Sidebar -->
        <!-- ============================================================== -->

        <div id="page-wrapper">
            <div class="container-fluid">
                @RenderBody()
                <footer class="footer text-center"> &copy; @DateTime.Now.Year - Sistemas de Informação Avançados </footer>
            </div>
        </div>
    </div>

    <!-- ============================================================== -->
    <!-- All Jquery -->
    <!-- ============================================================== -->
    <script src="~/Content/plugins/bower_components/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="~/Content/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- Menu Plugin JavaScript -->
    <script src="~/Content/plugins/bower_components/sidebar-nav/dist/sidebar-nav.min.js"></script>
    <!--slimscroll JavaScript -->
    <script src="~/Content/js/jquery.slimscroll.js"></script>
    <!--Wave Effects -->
    <script src="~/Content/js/waves.js"></script>
    <!--Counter js -->
    <script src="~/Content/plugins/bower_components/waypoints/lib/jquery.waypoints.js"></script>
    <script src="~/Content/plugins/bower_components/counterup/jquery.counterup.min.js"></script>
    <!-- chartist chart -->
    <script src="~/Content/plugins/bower_components/chartist-js/dist/chartist.min.js"></script>
    <script src="~/Content/plugins/bower_components/chartist-plugin-tooltip-master/dist/chartist-plugin-tooltip.min.js"></script>
    <!-- Sparkline chart JavaScript -->
    <script src="~/Content/plugins/bower_components/jquery-sparkline/jquery.sparkline.min.js"></script>
    <!-- Custom Theme JavaScript -->
    <script src="~/Content/js/custom.min.js"></script>
    <script src="~/Content/js/dashboard1.js"></script>
    <script src="~/Content/plugins/bower_components/toast-master/js/jquery.toast.js"></script>
</body>
</html>