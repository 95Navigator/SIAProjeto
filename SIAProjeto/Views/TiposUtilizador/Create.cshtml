@model SIAProjeto.ViewModels.TiposUtilizadorViewModel

@{
    ViewBag.Title = "Criar Novo Tipo de Utilizador";
}

<h2>Criar</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Tipo de Utilizador</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Nome:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("nome", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessage("nome", "", new { @class = "text-danger" })
            </div>
        </div>

        <h4>Permissões disponíveis</h4>

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayName("Nome")
                </th>
                <th>
                    @Html.DisplayName("Descrição")
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model.PermissoesList)
            {
                <tr>
                    <td>
                        @Html.CheckBox(string.Concat("permissao", item.idPermissao), false, new { htmlAttributes = new { @class = "form-control" } })
                        &emsp;
                        @Html.DisplayFor(modelItem => item.nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.descricao)
                    </td>
                </tr>
            }

        </table>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Criar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regressar", "Index")
</div>
