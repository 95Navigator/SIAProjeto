@model SIAProjeto.ViewModels.TiposUtilizadorViewModel

@{
    ViewBag.Title = "Criar Novo Tipo de Utilizador";
}

<div class="row bg-title">
    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
        <h4 class="page-title">Criar Novo Tipo de Utilizador</h4>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-12 col-xs-12">
            <div class="white-box">
                <div class="form-horizontal form-material">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.Label("Nome", htmlAttributes: new { @class = "col-md-12" })
                        <div class="col-md-12">
                            @Html.Editor("nome", new { htmlAttributes = new { @class = "form-control form-control-line" } })
                            @Html.ValidationMessage("nome", "", new { @class = "text-danger" })
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <div class="col-sm-12">
                            <input type="submit" value="Criar Novo Tipo de Utilizador" class="btn btn-success" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 col-xs-12">
            <div class="white-box">
                <h3 class="box-title">Permissões Disponíveis</h3>

                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayName("Nome")
                                </th>
                                <th>
                                    @Html.DisplayName("Descrição")
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.PermissoesList)
                            {
                                <tr>
                                    <td>
                                        @Html.CheckBox(string.Concat("permissao", item.idPermissao), false, new { htmlAttributes = new { @class = "form-control" } })
                                        &emsp;
                                        @Html.DisplayFor(modelItem => item.nome)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.descricao)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}