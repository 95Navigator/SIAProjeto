@model IEnumerable<SIAProjeto.Models.TipoUtilizador>

@{
    ViewBag.Title = "Gestor de Tipos de Utilizador";
}

<div class="row bg-title">
    <div class="col-lg-6 col-md-4 col-sm-4 col-xs-12">
        <h4 class="page-title">Gestor de Tipos de Utilizador</h4>
    </div>
</div>

<div class="row">
    <div class="col-lg-12 col-sm-6 col-xs-12">
        <div class="white-box analytics-info">
            <h3 class="box-title">Total de Tipos de Utilizador Disponíveis</h3>
            <ul class="list-inline two-part">
                <li>
                    @*<div id="sparklinedash"></div>*@
                </li>
                <li class="text-right"><i class="ti-arrow-up text-success"></i> <span class="counter text-success">@Model.Count()</span></li>
            </ul>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <div class="white-box">
            <h3 class="box-title">Tipos de Utilizador Disponíveis</h3>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayName("Nome")
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.nome)
                                </td>
                                <td>
                                    @Html.ActionLink("Editar", "Edit", new { id = item.idTipoUtilizador }) |
                                    @Html.ActionLink("Detalhes", "Details", new { id = item.idTipoUtilizador }) |
                                    @Html.ActionLink("Eliminar", "Delete", new { id = item.idTipoUtilizador })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="form-actions no-color">
                @using (Html.BeginForm("Create", "TiposUtilizador", FormMethod.Get))
                {
                    @Html.AntiForgeryToken()

                    <input type="submit" value="Criar Novo Tipo de Utilizador" class="btn btn-success" />
                }
            </div>

        </div>
    </div>
</div>