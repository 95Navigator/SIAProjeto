@model SIAProjeto.ViewModels.TiposUtilizadorViewModel

@{
    ViewBag.Title = "Eliminar Tipo de Utilizador";
}

<h2>Eliminar</h2>

<h3>Tem a certeza que deseja eliminar este item?</h3>
<div>
    <h4>Tipo de Utilizador</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nome
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TipoUtilizador.nome)
        </dd>

    </dl>

    <h4>Permissões concedidas</h4>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayName("Nome")
            </th>
            <th>
                @Html.DisplayName("Descrição")
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.PermissoesList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.descricao)
                </td>
            </tr>
        }

    </table>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-default" /> |
            @Html.ActionLink("Regressar", "Index")
        </div>
    }
</div>
