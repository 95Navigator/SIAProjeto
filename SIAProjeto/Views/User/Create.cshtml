@model SIAProjeto.Models.Teste

@{
    ViewBag.Title = "Novo Teste";
}

<h2>Novo Teste</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Introduza todos os dados aqui pedidos</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Nome:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.nome, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nome, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Técnica:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.idTecnica, (SelectList)ViewBag.selectListTecnica, "Escolha uma técnica da lista" , new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.idTecnica, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Começar Teste" class="btn btn-block btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regressar", "Index")
</div>
