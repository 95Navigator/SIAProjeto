@model IEnumerable<SIAProjeto.Models.Teste>

@{
    ViewBag.Title = "Página Principal";
}

<h2>Página Principal</h2>
<h4>Testes Realizados</h4>

<p>
    @Html.ActionLink("Realizar Novo Teste", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Nome")
        </th>
        <th>
            @Html.DisplayName("Data de Realização")
        </th>
        <th>
            @Html.DisplayName("Classificação")
        </th>
        <th>
            @Html.DisplayName("Técnica")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dataRealizacao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.classificacao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.idTecnica)
        </td>
        <td>
            @Html.ActionLink("Ver Detalhes", "Details", new { id=item.idTeste }) |
            @Html.ActionLink("Eliminar Teste", "Delete", new { id=item.idTeste })
        </td>
    </tr>
}

</table>
